#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This is the debhelper compatability version to use.
#export DH_COMPAT=5
export destdir = $(CURDIR)/debian/openstreetmap-map-icons


build: build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	# $(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	./debian/update_svn_revision.sh

	rm -rf build
	mkdir -p build
	./copy_icons_to_dir.sh build
	./update_thumbnails.pl build
	./merge-icons-all-from-svg2classic2square.sh build
	cp icons.xml build/
	cd build; ../update_icons.pl
	./create_overview.pl -D build

	# Now split into two packages
	./copy_icons_to_debian_package_dirs.pl

	# icons.xml belongs to the unrestricted package
	cp icons.xml debian/openstreetmap-map-icons/usr/share/map-icons/
	./create_overview.pl -D debian/openstreetmap-map-icons/usr/share/map-icons/

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdebconf
#	dh_installdocs
#	dh_installexamples
	dh_installmenu
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
#	dh_installman
#	dh_link
	dh_strip
	dh_compress 
	dh_fixperms
#	dh_perl
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build install
# We have nothing to do by default.

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install  install-indep install-arch
